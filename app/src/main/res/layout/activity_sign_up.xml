<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hp.carfleet.SignUp"

    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:orientation="vertical">


        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bg"

            tools:ignore="MissingConstraints" />



        <ImageView
            android:layout_width="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imageView_user"
            android:layout_height="100dp"
            />
        <TextView
            android:id="@+id/textView_Logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="CarFleet Register"
            android:textColor="@color/blanc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/et_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_user" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:inputType="text"
            android:background="@drawable/bg_ediitext"
            android:hint="Email"
            android:textColorHint="#d0ecef"
            android:textColor="#e8fafc"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/et_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Logo" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ediitext"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:textColor="#e8fafc"
            android:textColorHint="#d0ecef"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />
        <EditText
            android:id="@+id/repasswordFiled"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_ediitext"
            android:hint="Confirmer"
            android:inputType="textPassword"
            android:textColor="#e8fafc"
            android:textColorHint="#d0ecef"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password" />

        <TextView
            android:id="@+id/textv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="En vous Inscrivant vous acceptez la politique relative de notre application"
            android:textColor="@color/blanc"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repasswordFiled" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/btn_white_selector"
            android:text="ACCEPTER ET S'INSCRIRE"
            android:textAllCaps="false"
            android:textColor="@color/blue_overlay"
            android:textSize="@dimen/txt16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textv"

            tools:layout_editor_absoluteY="431dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/linearLayout_deja_compte"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_up">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deja inscrit?"
                android:textAlignment="center"
                android:textColor="@color/blanc"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/idvous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idendifier-vous "
                android:textColor="@color/blanc"
                android:layout_marginLeft="10dp"
              android:textStyle="bold"
                android:textSize="13dp"
                app:layout_constraintTop_toBottomOf="@id/btn_sign_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"

                android:src="@drawable/facenew" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twitternew" />

            <ImageView
                android:id="@+id/google_id1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"

                android:src="@drawable/googleplusnew" />
        </LinearLayout>






    </android.support.constraint.ConstraintLayout>
</ScrollView>

