<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ModelListActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#3D9EFF"
        android:paddingVertical="2dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:layout_marginLeft="7.5dp"
            android:src="@drawable/ic_dbl_car"/>
        <TextView
            android:id="@+id/constraint_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:text="Voitures"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/Base.Widget.AppCompat.Spinner"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check"
                android:background="#00ffffff"
                android:padding="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginVertical="3dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_model_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_title" />
    </LinearLayout>
</android.support.v7.widget.CardView>